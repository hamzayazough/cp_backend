
# Server URL
SERVER_URL=http://localhost:3000

# Firebase Configuration
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="your_firebase_private_key"
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=crowdprop
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# AWS S3 Configuration
AWS_REGION=your_aws_region
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_s3_bucket_name

# Stripe Configuration (Add your test keys here)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_CONNECT_CLIENT_ID=your_stripe_connect_client_id

# Stripe API Configuration
STRIPE_API_VERSION=2023-10-16
DEFAULT_CURRENCY=USD
SUPPORTED_COUNTRIES=US,CA
PLATFORM_FEE_PERCENTAGE=10.0

# Stripe Connect URLs
STRIPE_CONNECT_RETURN_URL=http://localhost:3000/api/connect/oauth/callback
STRIPE_CONNECT_REFRESH_URL=http://localhost:3000/api/connect/refresh

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:4200

# Environment
IS_PRODUCTION=false