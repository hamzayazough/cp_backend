
# Server URL
SERVER_URL=http://localhost:3000

# Firebase Configuration
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="your_firebase_private_key"
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=crowdprop
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# AWS S3 Configuration
AWS_REGION=your_aws_region
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_s3_bucket_name

# Stripe Configuration (Add your test keys here)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_CONNECT_CLIENT_ID=your_stripe_connect_client_id

# Stripe API Configuration
STRIPE_API_VERSION=2023-10-16
DEFAULT_CURRENCY=USD
SUPPORTED_COUNTRIES=US,CA
PLATFORM_FEE_PERCENTAGE=10.0

# Stripe Connect URLs
STRIPE_CONNECT_RETURN_URL=http://localhost:3000/api/connect/oauth/callback
STRIPE_CONNECT_REFRESH_URL=http://localhost:3000/api/connect/refresh

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:4200

# Email Configuration (Gmail SMTP - Free, 500 emails/day)
# To enable email notifications, get Gmail App Password from: https://myaccount.google.com/apppasswords
SMTP_USER=your_gmail@gmail.com
SMTP_PASS=your_gmail_app_password  # Use App Password, not regular password
FROM_EMAIL=your_gmail@gmail.com    # Optional, defaults to SMTP_USER

# SMS Configuration (Choose one provider)
# === TWILIO SMS PROVIDER ===
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890    # Your Twilio phone number

# === AWS SNS SMS PROVIDER (Alternative to Twilio) ===
# Uses existing AWS credentials above + region
# AWS_ACCESS_KEY_ID=already_configured_above
# AWS_SECRET_ACCESS_KEY=already_configured_above  
# AWS_REGION=already_configured_above

# Push Notification Configuration (Firebase Cloud Messaging)
# Get from Firebase Console -> Project Settings -> Service Accounts
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# Notification System Settings
NOTIFICATION_RATE_LIMIT_PER_USER_PER_DAY=50  # Max notifications per user per day
NOTIFICATION_RETRY_ATTEMPTS=3                # Retry failed notifications
NOTIFICATION_BATCH_SIZE=100                  # Process notifications in batches
NOTIFICATION_QUIET_HOURS_DEFAULT_START=22:00 # Default quiet hours start
NOTIFICATION_QUIET_HOURS_DEFAULT_END=08:00   # Default quiet hours end

# External Service Rate Limits (milliseconds between requests)
EMAIL_RATE_LIMIT_DELAY=100    # 100ms between emails
SMS_RATE_LIMIT_DELAY=1000     # 1 second between SMS (recommended)
PUSH_RATE_LIMIT_DELAY=50      # 50ms between push notifications

# Environment
IS_PRODUCTION=false

# Discord Configuration
DISCORD_GUILD_ID=your_discord_guild_id
DISCORD_BOT_TOKEN=your_discord_bot_token